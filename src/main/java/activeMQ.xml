<broker xmlns="http://activemq.apache.org/schema/core" id="localbroker"
        brokerName="localBroker" persistent="false">
    <jmsBridgeConnectors>
        <jmsQueueConnector
                outboundQueueConnectionFactory="#remoteFactory">
            <inboundQueueBridges>
                <inboundQueueBridge
                        inboundQueueName="org.apache.activemq.network.jms.booksQueue"/>
            </inboundQueueBridges>
        </jmsQueueConnector>
    </jmsBridgeConnectors>
    <transportConnectors>
        <transportConnector uri="tcp://localhost:61234"/>
    </transportConnectors>
    <systemUsage>
        <systemUsage>
            <memoryUsage>
                <memoryUsage limit="64 mb"/>
            </memoryUsage>
            <storeUsage>
                <storeUsage limit="1 gb"/>
            </storeUsage>
            <tempUsage>
                <tempUsage limit="1 gb"/>
            </tempUsage>
        </systemUsage>
    </systemUsage>
</broker>
        <!-- JMS ConnectionFactory to use remote -->
<bean id="remoteFactory"
      class="org.apache.activemq.ActiveMQConnectionFactory">
<property name="brokerURL" value="tcp://localhost:9093"/>
</bean>